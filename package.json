{
  "name": "@ionic/pro-api-javascript-client",
  "version": "0.0.13",
  "description": "A simple JasvaScript client for interacting with Ionic Pro",
  "main": "dist/index.js",
  "repository": "https://github.com/ionic-team/pro-sdk.git",
  "issue": "https://github.com/ionic-team/pro-sdk/issues",
  "typings": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest --watch",
    "test:singlerun": "jest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "typescript",
    "javascript",
    "ionic"
  ],
  "author": "Ionic <hi@ionic.io>",
  "license": "MIT",
  "dependencies": {
    "jsonwebtoken": "^8.1.0",
    "superagent": "^3.6.3"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^7.2.3",
    "@types/superagent": "^3.5.6",
    "jest": "^21.2.1",
    "ts-jest": "^21.1.4",
    "typescript": "^2.5.3"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/test/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/lib/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "globals": {
      "ts-jest": {
        "skipBabel": true
      }
    }
  }
}
